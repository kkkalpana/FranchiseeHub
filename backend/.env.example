# MongoDB (For Docker: use service name 'mongo')
MONGODB_URI=mongodb://mongo:27017/franchiseeHub
# For cloud: mongodb+srv://username:password@cluster.xxxxx.mongodb.net/franchiseeHub

# Server
PORT=2016
NODE_ENV=production

# Session Secret (Change this to a random string)
SESSION_SECRET=your-super-secret-session-key-min-32-characters-long

# Email Configuration
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password-16-chars
ADMIN_EMAIL=admin@franchiseehub.com

# Frontend URL (Update after deploying frontend)
FRONTEND_URL=https://your-netlify-site.netlify.app
